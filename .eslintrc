{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "16.4.1"
      }
    },
    "rules": {
        "indent": ["error", 2],
        "semi": "error",
        "quotes": ["error", "single", { "allowTemplateLiterals": true }]
    },
    "env": {
        "browser": true,
        "jest": true
    }
}